@page
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model RobertHeijn_Web_App.Areas.Identity.Pages.Account.RegisterPersonalInfoModel
@{
    ViewData["Title"] = "Register Personal Info";
}

<div class="container">

    <h2>@ViewData["Title"] for "@Model.Email"</h2>

    <div class="row">
        <div class="col-md-8">
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <hr/>
                <div class="form-group">
                    <label asp-for="Person.FirstName"></label>
                    <input asp-for="Person.FirstName" class="form-control"/>
                    <span asp-validation-for="Person.FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Person.LastName"></label>
                    <input asp-for="Person.LastName" class="form-control"/>
                    <span asp-validation-for="Person.LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Person.PhoneNumber"></label>
                    <input asp-for="Person.PhoneNumber" class="form-control"/>
                    <span asp-validation-for="Person.PhoneNumber" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-default">Register Personal Info</button>
            </form>
        </div>
    </div>

</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}