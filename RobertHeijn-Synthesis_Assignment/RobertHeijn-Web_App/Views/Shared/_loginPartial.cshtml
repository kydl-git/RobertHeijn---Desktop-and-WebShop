@using Microsoft.AspNetCore.Mvc.TagHelpers
@if (Context.User.Identity!.IsAuthenticated)
{
    <section class="col-lg-4 col-md-5 col-xs-12">
        <div class="rhs-identity">
            <form asp-area="Identity" asp-page="/Account/Logout" method="post" 
            id="logoutForm" class="navbar-right">
                <section class="rhs-identity-section">
                    <div class="rhs-identity-name">@Context.User.Identity.Name</div>
                    <img class="rhs-identity-image" src="~/images/arrow-down.png" alt="arrow-down">
                </section>
                <section class="rhs-identity-drop">
                    @* <a class="rhs-identity-item" *@
                    @*    asp-controller="Order" *@
                    @*    asp-action="MyOrders"> *@
                    @*     <div class="rhs-identity-name rhs-identity-name--upper">My orders</div> *@
                    @* </a> *@
                    <a class="rhs-identity-item"
                       asp-controller="Inventory"
                       asp-action="ViewInventory">
                        <div class="rhs-identity-name rhs-identity-name--upper">View Inventory</div>
                    </a>  
                    <br />
                    <a class="rhs-identity-item"
                       asp-controller="Account"
                       asp-action="MyAccount">
                        <div class="rhs-identity-name rhs-identity-name--upper">My account</div>
                    </a>  
                    <br />
                    <a class="rhs-identity-item" href="javascript:document.getElementById('logoutForm').submit()">
                        <div class="rhs-identity-name rhs-identity-name--upper">Log Out</div>
                        <img class="rhs-identity-image" src="~/images/logout.png" alt="Logout">
                    </a>
                </section>
            </form>
        </div>
    </section>

    <section class="col-lg-1 col-xs-12">
        @* @await Component.InvokeAsync("Basket") *@
    </section>
}
else
{
    <section class="col-lg-4 col-md-5 col-xs-12">
        <div class="rhs-identity">
            <section class="rhs-identity-section">
                <div class="rhs-identity-item">

                    <a asp-area="Identity" asp-page="/Account/Login" 
                    class="rhs-identity-name rhs-identity-name--upper">
                        Login
                    </a>
                </div>
            </section>
        </div>
    </section>

    <section class="col-lg-1 col-xs-12">
        @* @await Component.InvokeAsync("Basket") *@
    </section>
}