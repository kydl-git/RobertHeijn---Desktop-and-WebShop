@page
@model RobertHeijn_Web_App.Pages.Order.DeliveryDateModel

@{
    ViewData["Title"] = "Select Delivery Date";
}

<div class="container">
    <h2>@ViewData["Title"]</h2>
    <div class="row d-md-grid mx-auto">
        <div class="col-md-12">
            <section>
                <form method="post">
                    <div class="form-row input-group">
                        <div class="form-group"> 
                            <label asp-for="@Model.DeliveryDate"></label>
                            <input type="date" data-val="true" class="form-control" asp-for="@Model.DeliveryDate" asp-format="{0:yyyy-MM-dd}">  
                            <span asp-validation-for="@Model.DeliveryDate" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-primary" type="submit">Submit</button>
                        </div>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div> 