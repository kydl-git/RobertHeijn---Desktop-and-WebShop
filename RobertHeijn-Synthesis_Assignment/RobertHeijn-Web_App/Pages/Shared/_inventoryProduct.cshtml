@model RobertHeijn_Web_App.Models.Inventory.InventoryProductViewModel 
 
    <img class="rhs-inventory-thumbnail" src="~/images/catalog-item-default.png" alt="Robert Heijn Product"/>
    <input class="rhs-inventory-button" type="submit" value="[ ADD TO CART ]" asp-page="/Cart/Index"/>
    <div class="rhs-inventory-name">
        <span>@Model.ProductName</span>
    </div>
    <div class="rhs-inventory-price">
        <span>@Model.Price.ToString("N2")</span>
    </div>
    <input type="hidden" asp-for="@Model.ProductId" name="id" />
    <input type="hidden" asp-for="@Model.ProductName" name="name" />
    <input type="hidden" asp-for="@Model.Category" name="category" /> 
    <input type="hidden" asp-for="@Model.SubCategory" name="subcategory" />
    <input type="hidden" asp-for="@Model.Price" name="price" /> 
    <input type="hidden" asp-for="@Model.Amount" name="amount" /> 

